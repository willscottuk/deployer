{
    "timezone": "Europe/London",
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "configMigration": true,
    "extends": [
        "config:recommended",
        "docker:pinDigests",
        "helpers:pinGitHubActionDigests",
        ":pinDevDependencies",
        ":semanticCommits",
        ":semanticCommitScopeDisabled",
        ":skipStatusChecks"
    ],
    "baseBranchPatterns": [
        "dev"
    ],
    "ignoreDeps": [
        "wire-elements/pro"
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "packagist"
            ],
            "registryUrls": [
                "https://packagist.org"
            ]
        },
        {
            "semanticCommitType": ":arrow_up_small:",
            "matchPackageNames": [
                "*"
            ]
        },
        {
            "matchUpdateTypes": [
                "lockFileMaintenance",
                "pin",
                "pinDigest"
            ],
            "semanticCommitType": ":pushpin:",
            "automerge": true,
            "labels": [
                ":pushpin: dependencies",
                ":twisted_rightwards_arrows: automerge"
            ]
        },
        {
            "matchUpdateTypes": [
                "rollback"
            ],
            "semanticCommitType": ":arrow_down:"
        },
        {
            "matchUpdateTypes": [
                "bump"
            ],
            "semanticCommitType": ":bookmark:"
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "semanticCommitType": ":arrow_up:",
            "labels": [
                ":boom: major"
            ],
            "dependencyDashboardApproval": true
        },
        {
            "matchUpdateTypes": [
                "minor"
            ],
            "labels": [
                ":arrow_up_small: minor"
            ]
        },
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "labels": [
                ":arrow_up_small: minor",
                ":twisted_rightwards_arrows: automerge"
            ],
            "automerge": true
        },
        {
            "matchUpdateTypes": [
                "digest"
            ],
            "labels": [
                ":arrow_up_small: minor",
                ":twisted_rightwards_arrows: automerge"
            ],
            "automerge": true
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "description": "Update semantic-release version used by npx",
            "managerFilePatterns": [
                "/^\\.github/workflows/[^/]+\\.ya?ml$/"
            ],
            "matchStrings": [
                "\\srun: npx semantic-release@(?<currentValue>.*?)\\s"
            ],
            "datasourceTemplate": "npm",
            "depNameTemplate": "semantic-release"
        }
    ]
}
